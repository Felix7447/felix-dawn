<div class="logo-list-section">
  <div class="logo-list-container page-width">
    {% for item in section.blocks %}
      <div class="logo-list-item">
        <img src="{{ item.settings.logo | img_url: 'master' }}" alt="{{ item.settings.logo.alt }}">
        <h3>{{ item.settings.title }}</h3>
        <p>{{ item.settings.text }}</p>
        <span>{{ item.settings.link }}</span>
      </div>
    {% endfor %}

  </div>
</div>

{% schema %}
  {
    "name": "logo-list-section",
    "blocks": [
      {
        "name": "logo-list-item",
        "type": "block",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo",
            "label": "Logo"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "text",
            "id": "text",
            "label": "Text"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Logo List section"
      }
    ]
  }
{% endschema %}